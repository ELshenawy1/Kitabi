@model IEnumerable<Author>
@{
    ViewData["Title"] = "Index";
    
}




@if (!Model.Any())
{
    <div class="alert  alert-warning">
        <h4 class="alert-heading">No Authors!</h4>
        <p class="mb-0">No authors were added yet.</p>
    </div>
}
else
{
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-6">

                <div class="mt-3">
                    <table class="table table-hover ">
                        <tbody>
                            @foreach (var auth in Model)
                            {
                                <tr class="table-secondary" id="@auth.ID">
                                    <td>
                                        <div class="d-flex">
                                            <div class="d-flex flex-column justify-content-center ">
                                                <legend>@auth.Name</legend>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="align-middle">
                                        <div class="d-flex justify-content-end">
                                            <a asp-action="Edit" asp-route-id="@auth.ID" class="btn btn-info me-2"><i class="bi bi-pencil-square"></i></a>
                                            <a onclick="remove(@auth.ID)" class="btn btn-danger me-4" ><i class="bi bi-trash3"></i></a>
                                        </div>
                                    </td>
                                </tr>
                            }
                            <tr class="table-secondary">
                                <td colspan="2" class="text-center  "> 
                                    <a class="btn btn-primary btn-lg " asp-action="Create">
                                        Add Author
                                        <i class="bi bi-plus-square"></i>
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

}
@*--------*@

@section Scripts{
    <script>
        function remove(id){
            $.ajax({
                url: "/Authors/Delete/" + id,
                success: function (result) {
                    document.getElementById(id).remove();
                }
            });
        }
    </script>
    
    
}