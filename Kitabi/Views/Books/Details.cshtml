@using Kitabi.Settings;
@model Book
@{
    ViewData["Title"] = Model.Name;
}

<div class="card border-secondary rounded-4 overflow-hidden">
    <div class="card-body p-0">
        <div class="row">
            <div class="col-md-8 px-5 py-4 d-flex flex-column justify-content-between ">
                <div>
                    <h1 class="text-secondary fw-bolder">@Model.Name</h1>
                    <span class="badge bg-info fs-5 mb-4">@Model.Category.Name</span>
                    <p class="ps-5">@Model.Description</p>
                </div>
                <div>
                    @foreach (BookAuthor ba in Model.BookAuthors)
                    {
                        <p>@ba.Author.Name</p>
                    }
                </div>
            </div>
            <div class="col-md-4">
                <img src="@($"{FileSettings.ImagesPath}/{Model.Cover}")" alt="@Model.Name" class="w-100"/>
            </div>
        </div>
    </div>
</div>